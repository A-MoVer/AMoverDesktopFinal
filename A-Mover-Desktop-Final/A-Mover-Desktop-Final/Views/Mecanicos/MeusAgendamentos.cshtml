@model IEnumerable<A_Mover_Desktop_Final.Models.Servico>

@{
    ViewData["Title"] = "Meus Agendamentos";
}

<div class="card m-5 p-1">
    <div class="d-flex justify-content-between align-items-center m-3">
        <h1 class="m-0">Meus Agendamentos</h1>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table" id="tabela">
            <thead class="table-light">
                <tr>
                    <th>Data</th>
                    <th>Mota</th>

                    <th>Estado</th>

                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DataServico.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Mota?.NumeroIdentificacao</td>
                        <td>@item.Estado</td>
                        <td class="text-end">
                            <a asp-controller="Servico" asp-action="Details" asp-route-id="@item.IDServico"
                               class="btn btn-sm btn-outline-primary" title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabela').DataTable({
                pageLength: 10,
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.7/i18n/pt-PT.json"
                }
            });
        });
    </script>
}
