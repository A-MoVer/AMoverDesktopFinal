@model IEnumerable<A_Mover_Desktop_Final.Models.Mota>

@{
	ViewData["Title"] = "Gestão de Motas";
}

<div class="card m-5 p-1">
	<div class="d-flex justify-content-between align-items-center m-3">
		<h1 class="m-0">Gestão de Motas</h1>
	</div>

	<div class="table-responsive text-nowrap">
		<table class="table" id="tabela">
			<thead class="table-light">
				<tr>
					<th>Nº Identificação</th>
					<th>Modelo</th>
					<th>Data de Registo</th>
					<th>Cor</th>
					<th>Quilometragem</th>
					<th>Estado</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr id="row-@item.IDMota">
						<td>@item.NumeroIdentificacao</td>
						<td>@item.ModeloMota?.Nome</td>
						<td>@item.DataRegisto.ToString("dd/MM/yyyy")</td>
						<td>@item.Cor</td>
						<td>@item.Quilometragem</td>
						<td>@item.Estado</td>
						<td>
							<a asp-action="Details" asp-route-id="@item.IDMota" class="btn btn-sm btn-info text-white me-2">
								<i class="fas fa-info-circle"></i> Detalhes
							</a>
							<a asp-action="Edit" asp-route-id="@item.IDMota" class="btn btn-sm btn-warning text-white me-2">
								<i class="fas fa-edit"></i> Editar
							</a>
							<a asp-action="Delete" asp-route-id="@item.IDMota" class="btn btn-sm btn-danger text-white me-2">
								<i class="fas fa-trash-alt"></i> Eliminar
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#tabela').DataTable({
				"pageLength": 10,
				"language": {
					"lengthMenu": "Mostrar _MENU_ registos por página",
					"paginate": {
						"first": "Primeira",
						"last": "Última",
						"next": "Próxima",
						"previous": "Anterior"
					},
					"info": "_START_ a _END_ de _TOTAL_ registos",
					"infoEmpty": "Nenhum registo disponível",
					"search": "Pesquisar:",
					"zeroRecords": "Nenhum registo encontrado"
				}
			});
		});
	</script>
}
