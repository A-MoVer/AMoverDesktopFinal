@model ForceChangePasswordVM
@{
    Layout = "_LayoutNoSidebar";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-primary">Primeiro acesso: alterar password</h2>
        <p class="text-muted">Por segurança, tens de definir uma nova password antes de continuares.</p>

        <form asp-action="ForceChangePassword" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label class="form-label">Password atual (temporária)</label>
                <input asp-for="CurrentPassword" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Nova password</label>
                <input asp-for="NewPassword" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirmar nova password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Guardar e continuar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
