@model IEnumerable<A_Mover_Desktop_Final.Models.MaterialRecebido>

@{
    ViewData["Title"] = "Materiais Recebidos";
}

<div class="card m-5 p-1">
    <div class="d-flex justify-content-between align-items-center m-3">
        <h1 class="m-0">Materiais Recebidos</h1>
        <a type="button" class="btn btn-primary" asp-action="Create">Registar Receção</a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table" id="tabela">
            <thead class="table-light">
                <tr>
                    <th>Peça</th>
                    <th>Fornecedor</th>
                    <th>Data de Receção</th>
                    <th>Quantidade</th>
                    <th>Lote</th>
                    <th>Documento</th>
                    <th>Observações</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.IDMaterialRecebido">
                        <td><b>@(item.Peca?.PartNumber ?? "-")</b></td>
                        <td>@(item.Fornecedor?.Nome ?? "-")</td>
                        <td>@item.DataRececao.ToString("yyyy-MM-dd")</td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lote</td>
                        <td>@item.Documento</td>
                        <td>@item.Observacoes</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.IDMaterialRecebido" class="btn btn-sm btn-info text-white me-2">
                                <i class="fas fa-eye"></i> Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.IDMaterialRecebido" class="btn btn-sm btn-warning text-white me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IDMaterialRecebido" class="btn btn-sm btn-danger text-white">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabela').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registos por página",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "info": "_START_ a _END_ de _TOTAL_ registos",
                    "infoEmpty": "Nenhum registo disponível",
                    "search": "Pesquisar:",
                    "zeroRecords": "Nenhum registro encontrado"
                }
            });
        });
    </script>
}
