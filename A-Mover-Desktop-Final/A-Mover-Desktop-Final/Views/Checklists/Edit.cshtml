@model A_Mover_Desktop_Final.Models.Checklist

@{
    ViewData["Title"] = "Editar Checklist";
}

<div class="col-xxl">
    <div class="card m-5">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h1 class="mb-0">Editar Checklist</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IDChecklist" />

                <!-- Nome -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Nome">
                        Nome <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>

                <!-- Descrição -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Descricao">
                        Descrição <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tipo -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Tipo">
                        Tipo <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <select asp-for="Tipo" class="form-control"></select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>

                <p class="text-muted"><span class="text-danger">*</span> - Preenchimento obrigatório</p>

                <div class="row justify-content-start">
                    <div class="col-sm-10 offset-sm-2 d-flex">
                        <input type="submit" value="Salvar" class="btn btn-primary me-2" />
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}