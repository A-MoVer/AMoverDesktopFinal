@model IEnumerable<A_Mover_Desktop_Final.Models.Checklist>

@{
    ViewData["Title"] = "Checklists";
}

<h1>Checklists</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Tipo</th>
                        <th>Modelos</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                            <td>
                                @if (item.ChecklistModelos != null && item.ChecklistModelos.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var cm in item.ChecklistModelos)
                                        {
                                            <li>@cm.ModeloMota?.Nome</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Genérico (todos os modelos)</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.IDChecklist" class="btn btn-sm btn-outline-primary">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.IDChecklist" class="btn btn-sm btn-outline-info">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.IDChecklist" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
