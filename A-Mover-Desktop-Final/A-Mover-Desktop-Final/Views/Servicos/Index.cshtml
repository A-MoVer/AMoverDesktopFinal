@model IEnumerable<A_Mover_Desktop_Final.Models.Servico>

@{
    ViewData["Title"] = "Gestão de Intervenções";
}

<div class="card m-5 p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary m-0">Gestão de Intervenções</h1>
        <div>
            <a asp-action="AgendarIntervencao" class="btn btn-outline-primary me-2">
                <i class="bi bi-calendar-plus"></i> Agendar Intervenção
            </a>
            <a asp-action="RegistarIntervencao" class="btn btn-primary">
                <i class="bi bi-tools"></i> Registar Intervenção
            </a>
        </div>
    </div>

    <!-- Filtro por Estado -->
    <div class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <label class="input-group-text" for="filtroEstado">
                        <i class="bi bi-funnel"></i> Estado:
                    </label>
                    <select id="filtroEstado" class="form-select">
                        <option value="">Todos</option>
                        <option value="Agendado">Agendado</option>
                        <option value="EmCurso">Em Curso</option>
                        <option value="Concluido">Concluído</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table" id="tabelaServicos">
            <thead class="table-light">
                <tr>
                    <th>Mota</th>
                    <th>Tipo</th>
                    <th>Estado</th>
                    <th>Data Agendada</th>
                    <th>Data Conclusão</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-estado="@item.Estado">
                        <td>@item.Mota?.NumeroIdentificacao</td>
                        <td>@item.Tipo</td>
                        <td>
                            <span class="badge
                                @(item.Estado == EstadoServico.Concluido ? "bg-success" :
                                  item.Estado == EstadoServico.EmCurso ? "bg-warning text-dark" : "bg-secondary")">
                                @item.Estado
                            </span>
                        </td>
                        <td data-order="@item.DataServico.ToString("yyyy-MM-dd")">@item.DataServico.ToString("dd/MM/yyyy")</td>
                        <td data-order="@(item.DataConclusao?.ToString("yyyy-MM-dd") ?? "9999-12-31")">
                            @(item.DataConclusao?.ToString("dd/MM/yyyy") ?? "-")
                        </td>
                        <td>
                            @if (item.Estado == EstadoServico.Agendado)
                            {
                                <a asp-action="IniciarServico" asp-route-id="@item.IDServico" 
                                   class="btn btn-primary btn-sm">
                                    <i class="bi bi-play-fill"></i> Iniciar Serviço
                                </a>
                            }
                            @if (item.Estado == EstadoServico.EmCurso)
                            {
                                <a asp-action="GerirPecas" asp-route-id="@item.IDServico" 
                                   class="btn btn-sm btn-info text-white me-2">
                                    <i class="bi bi-arrow-right-circle"></i> Continuar Serviço
                                </a>
                            }
                            <a asp-action="Details" asp-route-id="@item.IDServico" class="btn btn-sm btn-info text-white me-2">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.IDServico" class="btn btn-sm btn-warning text-white me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IDServico" class="btn btn-sm btn-danger text-white me-2">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>                          
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar DataTable com ordenação por data agendada (descendente)
            var table = $('#tabelaServicos').DataTable({
                "pageLength": 10,
                "order": [[3, "desc"]], // Ordenar pela coluna de data agendada (índice 3) em ordem ascendente
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registos por página",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "info": "_START_ a _END_ de _TOTAL_ registos",
                    "infoEmpty": "Nenhum registo disponível",
                    "search": "Pesquisar:",
                    "zeroRecords": "Nenhum serviço encontrado"
                },
                "columnDefs": [
                    { "orderable": false, "targets": 5 } // Desativar ordenação na coluna de ações
                ]
            });
            
            // Aplicar filtro por estado quando o dropdown mudar
            $('#filtroEstado').on('change', function() {
                var estado = $(this).val();
                
                // Usando a API de busca do DataTables para a coluna Estado (índice 2)
                if (estado) {
                    table.column(2).search(estado).draw();
                } else {
                    table.column(2).search('').draw();
                }
                
                // Adicionar classes visuais para diferenciar estados após o filtro
                aplicarEstilosTabela();
            });
            
            // Função para aplicar estilos visuais baseados no estado
            function aplicarEstilosTabela() {
                $('tr[data-estado]').each(function() {
                    var estado = $(this).data('estado');
                    $(this).removeClass('table-secondary table-warning table-success');
                    
                    switch(estado) {
                        case 'Agendado':
                            $(this).addClass('table-secondary');
                            break;
                        case 'EmCurso':
                            $(this).addClass('table-warning');
                            break;
                        case 'Concluido':
                            $(this).addClass('table-success');
                            break;
                    }
                });
            }
            
            // Aplicar estilos na inicialização
            aplicarEstilosTabela();
        });
    </script>
}
