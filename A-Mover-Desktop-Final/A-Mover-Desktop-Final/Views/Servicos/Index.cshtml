@model IEnumerable<A_Mover_Desktop_Final.Models.Servico>

@{
    ViewData["Title"] = "Gestão de Intervenções";
}

<div class="card m-5 p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary m-0">Gestão de Intervenções</h1>
        <div>
            <a asp-action="AgendarIntervencao" class="btn btn-outline-primary me-2">
                <i class="bi bi-calendar-plus"></i> Agendar Intervenção
            </a>
            <a asp-action="RegistarIntervencao" class="btn btn-primary">
                <i class="bi bi-tools"></i> Registar Intervenção
            </a>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table" id="tabelaServicos">
            <thead class="table-light">
                <tr>
                    <th>Mota</th>
                    <th>Tipo</th>
                    <th>Estado</th>
                    <th>Data Agendada</th>
                    <th>Data Conclusão</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Mota?.NumeroIdentificacao</td>
                        <td>@item.Tipo</td>
                        <td>
                            <span class="badge
                                @(item.Estado == EstadoServico.Concluido ? "bg-success" :
                                  item.Estado == EstadoServico.EmCurso ? "bg-warning text-dark" : "bg-secondary")">
                                @item.Estado
                            </span>
                        </td>
                        <td>@item.DataServico.ToString("dd/MM/yyyy")</td>
                        <td>
                            teste
                        </td>
                        <td>
                            @if (item.Estado == EstadoServico.Agendado)
                            {
                                <a asp-action="IniciarServico" asp-route-id="@item.IDServico" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fa fa-play"></i> Iniciar Serviço
                                </a>
                            }
                            @if (item.Estado == EstadoServico.EmCurso)
                            {
                                <a asp-action="GerirPecas" asp-route-id="@item.IDServico" 
                                   class="btn btn-sm btn-info text-white me-2">
                                    <i class="bi bi-wrench"></i> Peças
                                </a>
                            }
                            <a asp-action="Details" asp-route-id="@item.IDServico" class="btn btn-sm btn-info text-white me-2">
                                <i class="fas fa-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.IDServico" class="btn btn-sm btn-warning text-white me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IDServico" class="btn btn-sm btn-danger text-white me-2">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>                          
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabelaServicos').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registos por página",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "info": "_START_ a _END_ de _TOTAL_ registos",
                    "infoEmpty": "Nenhum registo disponível",
                    "search": "Pesquisar:",
                    "zeroRecords": "Nenhum serviço encontrado"
                }
            });
        });
    </script>
}
