@model A_Mover_Desktop_Final.Models.Servico

@{
    ViewData["Title"] = "Detalhes do Serviço";
    ViewData["ActiveMenu"] = "Servicos";
    
    string statusClass = Model.Estado switch
    {
        EstadoServico.Agendado => "bg-label-info",
        EstadoServico.EmCurso => "bg-label-warning",
        EstadoServico.Concluido => "bg-label-success",
        _ => "bg-label-secondary"
    };
    
    string tipoClass = Model.Tipo == TipoServico.Manutenção ? "bg-label-danger" : "bg-label-primary";
}

<div class="card m-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="bx bx-wrench me-1"></i> Detalhes do Serviço #@Model.IDServico
        </h4>
        <div>
            <span class="badge @statusClass fs-6 me-2">@Model.Estado</span>
            <span class="badge @tipoClass fs-6">@Model.Tipo</span>
        </div>
    </div>
    
    <div class="card-body">
        <div class="row">
            <!-- Coluna da esquerda - Informações da mota -->
            <div class="col-md-5 mb-4 mb-md-0">
                <div class="card bg-light border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bx bx-cycling me-1"></i> Informações da Mota
                        </h5>
                        <hr>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-center mb-3">
                                <img src="~/assets/img/moto-placeholder.png" alt="Mota" style="max-height: 120px;" class="img-fluid">
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-5 text-muted">Nº Identificação:</div>
                                <div class="col-7 fw-bold">@Model.Mota?.NumeroIdentificacao</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-5 text-muted">Modelo:</div>
                                <div class="col-7">@Model.Mota?.ModeloMota?.Nome</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-5 text-muted">Cor:</div>
                                <div class="col-7">@Model.Mota?.Cor</div>
                            </div>
                            <a asp-controller="Motas" asp-action="Details" asp-route-id="@Model.Mota?.IDMota" class="btn btn-sm btn-outline-primary mt-2">
                                <i class="bx bx-info-circle"></i> Ver Mota
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Coluna da direita - Detalhes do serviço -->
            <div class="col-md-7">
                <h5 class="mb-3">
                    <i class="bx bx-detail me-1"></i> Detalhes do Serviço
                </h5>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="card bg-light border-0 mb-3">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm me-2 bg-label-primary rounded">
                                        <i class="bx bx-calendar-event"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Data Agendada</small>
                                        <span>@Model.DataServico.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card bg-light border-0 mb-3">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm me-2 bg-label-success rounded">
                                        <i class="bx bx-check-circle"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Data Conclusão</small>
                                        <span>@(Model.DataConclusao?.ToString("dd/MM/yyyy HH:mm") ?? "Não concluído")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card bg-light border-0 mb-4">
                    <div class="card-body">
                        <h6 class="mb-2">Descrição do Serviço</h6>
                        <p class="mb-0">@(string.IsNullOrEmpty(Model.Descricao) ? "Sem descrição fornecida." : Model.Descricao)</p>
                    </div>
                </div>
                
                <!-- Notas de Serviço -->
                <div class="card bg-light border-0 mb-4">
                    <div class="card-body">
                        <h6 class="mb-2">
                            <i class="bx bx-notepad me-1"></i> Notas da Manutenção
                        </h6>
                        @if (!string.IsNullOrEmpty(Model.NotasServico))
                        {
                            <p class="mb-0">@Model.NotasServico</p>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Nenhuma nota registrada para este serviço.</p>
                        }
                    </div>
                </div>
                
                <!-- Peças Alteradas -->
                <h5 class="mb-3 mt-4">
                    <i class="bx bx-cog me-1"></i> Peças Alteradas
                </h5>
                
                @if (Model.PecasAlteradas != null && Model.PecasAlteradas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Part Number</th>
                                    <th>Descrição</th>
                                    <th>Nº de Série</th>
                                    <th>Observações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var peca in Model.PecasAlteradas)
                                {
                                    <tr>
                                        <td>@peca.MotasPecasSN?.Pecas?.PartNumber</td>
                                        <td>@peca.MotasPecasSN?.Pecas?.Descricao</td>
                                        <td>@peca.MotasPecasSN?.NumeroSerie</td>
                                        <td>@peca.Observacoes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Resumo das alterações -->
                    <div class="card bg-light border-0 mt-3">
                        <div class="card-body">
                            <p class="mb-0">
                                <strong>Total de peças alteradas:</strong> @Model.PecasAlteradas.Count<br>
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bx bx-info-circle me-1"></i> Nenhuma peça foi alterada durante este serviço.
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bx bx-arrow-back"></i> Voltar à Lista
                </a>
            </div>
            
            <div>
                @if (Model.Estado != EstadoServico.Concluido)
                {
                    <a asp-action="GerirPecas" asp-route-id="@Model.IDServico" class="btn btn-info text-white me-2">
                        <i class="bx bx-wrench"></i> Gerenciar Peças
                    </a>
                    
                    @if (Model.Estado == EstadoServico.EmCurso)
                    {
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalConcluirServico">
                            <i class="bx bx-check-circle"></i> Concluir Serviço
                        </button>
                    }
                    else if (Model.Estado == EstadoServico.Agendado)
                    {
                        <a asp-action="IniciarServico" asp-route-id="@Model.IDServico" class="btn btn-primary">
                            <i class="bx bx-play"></i> Iniciar Serviço
                        </a>
                    }
                }
                
                <a asp-action="Edit" asp-route-id="@Model.IDServico" class="btn btn-warning ms-2">
                    <i class="bx bx-edit"></i> Editar
                </a>
                
                <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#modalDeletarServico">
                    <i class="bx bx-trash"></i> Excluir
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para confirmar conclusão do serviço -->
@if (Model.Estado == EstadoServico.EmCurso)
{
    <div class="modal fade" id="modalConcluirServico" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Concluir Serviço</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja concluir este serviço?</p>
                    <p>Esta ação não pode ser desfeita.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="ConcluirServico" asp-route-id="@Model.IDServico" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success">Concluir Serviço</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal para confirmar exclusão do serviço -->
<div class="modal fade" id="modalDeletarServico" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir Serviço</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir este serviço?</p>
                <p class="text-danger">Esta ação não pode ser desfeita e todos os registros relacionados serão removidos.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" asp-route-id="@Model.IDServico" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Excluir Serviço</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Seção para impressão -->
<div class="modal fade" id="modalImprimirServico" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Imprimir Relatório</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Selecione o tipo de relatório que deseja imprimir:</p>
                <div class="list-group">
                    <a href="#" onclick="imprimirRelatorio('completo')" class="list-group-item list-group-item-action">
                        <i class="bx bx-file me-2"></i> Relatório Completo
                    </a>
                    <a href="#" onclick="imprimirRelatorio('pecas')" class="list-group-item list-group-item-action">
                        <i class="bx bx-cog me-2"></i> Lista de Peças Alteradas
                    </a>
                    @if (Model.Estado == EstadoServico.Concluido)
                    {
                        <a href="#" onclick="imprimirRelatorio('fatura')" class="list-group-item list-group-item-action">
                            <i class="bx bx-receipt me-2"></i> Fatura de Serviço
                        </a>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function imprimirRelatorio(tipo) {
            // Implementar lógica de impressão baseada no tipo selecionado
            alert('Funcionalidade de impressão de ' + tipo + ' será implementada em breve.');
            $('#modalImprimirServico').modal('hide');
        }
    </script>
}
