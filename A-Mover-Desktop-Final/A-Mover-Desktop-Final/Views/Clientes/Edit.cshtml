@model A_Mover_Desktop_Final.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    ViewData["ActiveMenu"] = "Clientes";
}

<div class="col-xxl">
    <div class="card m-5">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h1 class="mb-0">Editar Cliente</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IDCliente" />
                
                <!-- Dados Pessoais -->
                <h5 class="mb-3 text-primary"><i class="bx bx-user me-1"></i>Dados Pessoais</h5>
                <div class="row mb-3">
                    <label asp-for="Nome" class="col-sm-2 col-form-label">Nome <span class="text-danger">*</span></label>
                    <div class="col-sm-10">
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label asp-for="Tipo" class="col-sm-2 col-form-label">Tipo <span class="text-danger">*</span></label>
                    <div class="col-sm-10">
                        <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<TipoCliente>()">
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bx bx-save me-1"></i> Guardar Alterações
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Voltar à Lista
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
