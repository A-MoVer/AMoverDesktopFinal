@model A_Mover_Desktop_Final.Models.Cliente

@{
    ViewData["Title"] = "Ficha do Cliente";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <!-- Cabeçalho -->
        <div class="text-center mb-4">
            <h1 class="fw-bold text-primary">Ficha do Cliente</h1>
            <p class="text-muted">Informações detalhadas sobre o cliente</p>
        </div>

        <!--Dados Pessoais -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <!-- Dados Pessoais -->
                <div class="w-100">
                    <h4 class="text-primary"><i class="bi bi-person-circle"></i> Dados Pessoais</h4>
                    <hr>

                    <div class="row">
                        <div class="col-md-6 d-flex">
                            <dt class="fw-bold me-2">Nome:</dt>
                            <dd class="mb-0">@Model.Nome</dd>
                        </div>
                        <div class="col-md-6 d-flex">
                            <dt class="fw-bold me-2">Tipo:</dt>
                            <dd class="mb-0">@Model.Tipo</dd>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6 d-flex">
                            <dt class="fw-bold me-2">NIF:</dt>
                            <dd class="mb-0">@Model.NIF</dd>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contactos -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body">
                <h4 class="text-primary"><i class="bi bi-envelope"></i> Contactos</h4>
                <hr>
                <div class="row">
                    <!-- Telefone -->
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold me-2">Telefone:</dt>
                        <dd class="mb-0">@Model.Telefone</dd>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 d-flex align-items-center">
                        <dt class="fw-bold me-2">Email:</dt>
                        <dd class="mb-0">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                            <a href="mailto:@Model.Email" class="btn btn-outline-primary btn-sm ms-2">
                                <i class="bi bi-send"></i> Enviar Email
                            </a>
                        </dd>
                    </div>
                </div>
            </div>
        </div>

        <!-- Morada -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body">
                <h4 class="text-primary"><i class="bi bi-geo-alt"></i> Morada</h4>
                <hr>
                <div class="row">
                    <!-- Morada e Código Postal -->
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold me-2">Morada:</dt>
                        <dd class="mb-0">@Model.Morada</dd>
                    </div>
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold me-2">Código Postal:</dt>
                        <dd class="mb-0">@Model.CodigoPostal</dd>
                    </div>
                </div>
                <div class="row mt-3">
                    <!-- Cidade -->
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold  me-2">Cidade:</dt>
                        <dd class="mb-0">@Model.Cidade</dd>
                    </div>
                </div>
            </div>
        </div>

        <!-- Outras Informações -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body">
                <h4 class="text-primary"><i class="bi bi-info-circle"></i> Outras Informações</h4>
                <hr>
                <!-- Estado -->
                <div class="row">
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold me-2">Estado:</dt>
                        <dd class="mb-0">
                            <span class="badge @(Model.Estado.ToString() == "Suspenso" ? "bg-danger" : "bg-success")">
                                <i class="bi @(Model.Estado.ToString() == "Suspenso" ? "bi-x-circle" : "bi-check-circle")"></i> @Model.Estado
                            </span>
                        </dd>
                    </div>
                </div>

                <!-- Data de Criação e Última Modificação -->
                <div class="row mt-2">
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold me-2">Data de Criação:</dt>
                        <dd class="mb-0">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
                    </div>
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold me-2">Última Modificação:</dt>
                        <dd class="mb-0">
                            @(Model.DataModificacao.HasValue ? Model.DataModificacao.Value.ToString("dd/MM/yyyy HH:mm") : "Nunca Modificado")
                        </dd>
                    </div>
                </div>

                <!-- Última Encomenda -->
                <div class="row mt-2">
                    <div class="col-md-6 d-flex">
                        <dt class="fw-bold me-2">Última Encomenda:</dt>
                        <dd class="mb-0">
                            @(Model.UltimaEncomenda.HasValue ? Model.UltimaEncomenda.Value.ToString("dd/MM/yyyy HH:mm") : "Sem encomendas")
                        </dd>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botões de Ação -->
        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.IDCliente" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
