@model A_Mover_Desktop_Final.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="card m-5 p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="m-0">Editar Fornecedor</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IDFornecedor" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row mb-3">
            <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-start">
            <div class="col-sm-10 offset-sm-2 d-flex">
                <input type="submit" value="Guardar" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
