@model A_Mover_Desktop_Final.Models.Fornecedor

@{
    ViewData["Title"] = "Detalhes do Fornecedor";
}

<div class="card m-5 p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="m-0">Detalhes do Fornecedor</h1>
        <div class="d-flex">
            <a asp-action="Edit" asp-route-id="@Model.IDFornecedor" class="btn btn-warning text-white me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table">
            <tbody>
                <tr>
                    <th style="width: 220px;">@Html.DisplayNameFor(m => m.Nome)</th>
                    <td>@Html.DisplayFor(m => m.Nome)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <td>@Html.DisplayFor(m => m.Email)</td>
                </tr>
                <tr>
                    <th>Nº de Peças</th>
                    <td>@(Model.Pecas?.Count ?? 0)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
