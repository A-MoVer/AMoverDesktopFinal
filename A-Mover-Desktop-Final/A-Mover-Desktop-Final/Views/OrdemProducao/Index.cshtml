@model IEnumerable<A_Mover_Desktop_Final.Models.OrdemProducao>

@{
    ViewData["Title"] = "Gestão de Ordens de Produção";
}

<div class="card m-5 p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="m-0">Gestão de Ordens de Produção</h1>
    </div>

    <!-- Filtro por Estado da OP -->
    <div class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <label class="input-group-text" for="filtroEstadoOP">Estado:</label>
                    <select id="filtroEstadoOP" class="form-select">
                        <option value="">Todos</option>
                        <option value="Pendente">Pendente</option>
                        <option value="EmProducao">Em Produção</option>
                        <option value="Concluida">Concluída</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table" id="tabela">
            <thead class="table-light">
                <tr>
                    <th>Número OP</th>
                    <th>Encomenda</th>
                    <th>Destino</th>
                    <th>Data de Criação</th>
                    <th>Data de Conclusão</th>
                    <th>Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><b>@item.NumeroOrdem</b></td>
                        <td>@item.IDEncomenda</td>
                        <td>@item.PaisDestino</td>
                        <td>@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @Html.Raw(item.DataConclusao.HasValue
                                     ? item.DataConclusao.Value.ToString("dd/MM/yyyy")
                                     : "<span class='text-muted'>Por definir</span>")
                        </td>
                        <td><b>@item.Estado</b></td>
                        <td>
                            @if (item.Estado.ToString() == "Pendente")
                            {
                                <a asp-action="Iniciar"
                                   asp-route-id="@item.IDOrdemProducao"
                                   class="btn btn-sm btn-success text-white me-1">
                                    <i class="fas fa-play-circle"></i> Iniciar OP
                                </a>
                            }
                            @if (item.Estado.ToString() == "EmProducao")
                            {
                                <a asp-action="Continuar"
                                   asp-route-id="@item.IDOrdemProducao"
                                   class="btn btn-sm btn-success text-white me-1">
                                    <i class="fas fa-play-circle"></i> Continuar OP
                                </a>
                            }
                            @if (item.Estado == EstadoOrdemProducao.Concluida)
                            {
                                <div class="d-flex mb-2">
                                    <form asp-action="AlterarEstado" method="post" class="me-2">
                                        <input type="hidden" name="id" value="@item.IDOrdemProducao" />
                                        <input type="hidden" name="novoEstado" value="@EstadoOrdemProducao.Embalada" />
                                        <button type="submit" class="btn btn-sm btn-primary text-white">
                                            <i class="bx bx-package me-1"></i> Marcar como Embalada
                                        </button>
                                    </form>
                                    <a asp-action="FichaOP" asp-route-id="@item.IDOrdemProducao" class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-info-circle"></i> Ver Ficha
                                    </a>
                                </div>
                            }
                            else if (item.Estado == EstadoOrdemProducao.Embalada)
                            {
                                <div class="d-flex mb-2">
                                    <form asp-action="AlterarEstado" method="post" class="me-2">
                                        <input type="hidden" name="id" value="@item.IDOrdemProducao" />
                                        <input type="hidden" name="novoEstado" value="@EstadoOrdemProducao.Enviada" />
                                        <button type="submit" class="btn btn-sm btn-success text-white">
                                            <i class="bx bx-send me-1"></i> Marcar como Enviada
                                        </button>
                                    </form>
                                    <a asp-action="FichaOP" asp-route-id="@item.IDOrdemProducao" class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-info-circle"></i> Ver Ficha
                                    </a>
                                </div>
                            }
                            else if (item.Estado == EstadoOrdemProducao.Enviada)
                            {
                                    <a asp-action="FichaOP" asp-route-id="@item.IDOrdemProducao" class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-info-circle"></i> Ver Ficha
                                    </a>
                            }
                            <a asp-action="Delete" asp-route-id="@item.IDOrdemProducao" class="btn btn-sm btn-danger text-white">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabela').DataTable({
                "pageLength": 10,
                "order": [[4, "desc"]],
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registos por página",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "info": "_START_ a _END_ de _TOTAL_ registos",
                    "infoEmpty": "Nenhum registo disponível",
                    "search": "Pesquisar:",
                    "zeroRecords": "Nenhuma ordem encontrada"
                },
                "columnDefs": [
                    { "orderable": false, "targets": 6 } // Desativa ordenação em Ações
                ]
            });

            // Filtro por Estado da OP
            $('#filtroEstadoOP').on('change', function () {
                var estadoSelecionado = $(this).val();
                var tabela = $('#tabela').DataTable();

                tabela.column(5).search(estadoSelecionado).draw();
            });
        });
    </script>
}
