@model A_Mover_Desktop_Final.Models.OrdemProducao

@{
    ViewData["Title"] = "Detalhes da Ordem de Produção";
}

<div class="col-xxl">
    <div class="card m-5">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h1 class="mb-0">Detalhes da Ordem de Produção</h1>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IDEncomenda)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IDEncomenda)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NumeroOrdem)
                </dt>
                <dd class="col-sm-9">
                    <strong>@Html.DisplayFor(model => model.NumeroOrdem)</strong>
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PaisDestino)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PaisDestino)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataCriacao)
                </dt>
                <dd class="col-sm-9">
                    @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataConclusao)
                </dt>
                <dd class="col-sm-9">
                    @Html.Raw(Model.DataConclusao.HasValue
                             ? Model.DataConclusao.Value.ToString("dd/MM/yyyy")
                             : "<span class='text-muted'>Por definir</span>")
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IDOrdemProducao" class="btn btn-warning text-white me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </div>
</div>
