@model IEnumerable<A_Mover_Desktop_Final.Models.ModeloMota>

@{
    ViewData["Title"] = "Gestão de Modelos de Mota";
}

<div class="card m-5 p-1">
    <div class="d-flex justify-content-between align-items-center m-3">
        <h1 class="m-0">Gestão de Modelos de Mota</h1>
        <a type="button" class="btn btn-primary" asp-action="Create">Adicionar Modelo de Mota</a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table" id="tabela">
            <thead class="table-light">
                <tr>
                    <th>Código do Produto</th>
                    <th>Nome</th>
                    <th>Data de Início de Produção</th>
                    <th>Data de Lançamento</th>
                    <th>Data de Descontinuação</th>
                    <th>Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var modelo in Model)
                {
                    <tr id="row-@modelo.IDModelo">
                        <td><b>@Html.DisplayFor(modelItem => modelo.CodigoProduto)</b></td>
                        <td>@Html.DisplayFor(modelItem => modelo.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => modelo.DataInicioProducao)</td>
                        <td>@Html.DisplayFor(modelItem => modelo.DataLancamento)</td>
                        <td>@Html.DisplayFor(modelItem => modelo.DataDescontinuacao)</td>
                        <td>@Html.DisplayFor(modelItem => modelo.Estado)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@modelo.IDModelo" class="btn btn-sm btn-info text-white me-2">
                                <i class="fas fa-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@modelo.IDModelo" class="btn btn-sm btn-warning text-white me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@modelo.IDModelo" class="btn btn-sm btn-danger text-white">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabela').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas por página",
                    "zeroRecords": "Nada encontrado",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "Nenhum registro disponível",
                    "infoFiltered": "(filtrado de _MAX_ registros no total)"
                }
            });
        });
    </script>
}
