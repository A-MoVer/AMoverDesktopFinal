@model A_Mover_Desktop_Final.Models.ModeloMota

@{
    ViewData["Title"] = "Criar Modelo";
}

<div class="card m-5 p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Criar Novo Modelo</h1>
    </div>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CodigoProduto" class="control-label"></label>
            <input asp-for="CodigoProduto" class="form-control" />
            <span asp-validation-for="CodigoProduto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataInicioProducao" class="control-label"></label>
            <input asp-for="DataInicioProducao" class="form-control" />
            <span asp-validation-for="DataInicioProducao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Estado" class="control-label"></label>
            <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<EstadoModelo>()"></select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <hr />
        <h3>Selecionar Peças</h3>

        <div class="row">
            <div class="col-md-6">
                <div class="card p-3 mb-3">
                    <h4>Peças Fixas</h4>
                    <p class="text-muted">Peças fixas que não necessitam de número de série</p>
                    <div class="table-responsive">
                        <table id="tabelaPecasFixas" class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px">Selecionar</th>
                                    <th>Número da Peça</th>
                                    <th>Descrição</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var part in ViewBag.Pecas)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox" class="peca-fixa-checkbox" value="@part.IDPeca" />
                                        </td>
                                        <td>@part.PartNumber</td>
                                        <td>@part.Descricao</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-3 mb-3">
                    <h4>Peças com Número de Série</h4>
                    <p class="text-muted">Peças que requerem rastreamento por número de série</p>
                    <div class="table-responsive">
                        <table id="tabelaPecasSN" class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px">Selecionar</th>
                                    <th>Número da Peça</th>
                                    <th>Descrição</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var part in ViewBag.Pecas)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox" class="peca-sn-checkbox" value="@part.IDPeca" />
                                        </td>
                                        <td>@part.PartNumber</td>
                                        <td>@part.Descricao</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" id="pecasFixasIds" name="pecasFixasIds" />
        <input type="hidden" id="pecasSNIds" name="pecasSNIds" />

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Criar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            var tabelaPecasFixas = $('#tabelaPecasFixas').DataTable({
                "pageLength": 5,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registos por página",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "info": "_START_ a _END_ de _TOTAL_ registos",
                    "infoEmpty": "Nenhum registo disponível",
                    "search": "Pesquisar:",
                    "zeroRecords": "Nenhuma peça encontrada"
                }
            });

            var tabelaPecasSN = $('#tabelaPecasSN').DataTable({
                "pageLength": 5,
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registos por página",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "info": "_START_ a _END_ de _TOTAL_ registos",
                    "infoEmpty": "Nenhum registo disponível",
                    "search": "Pesquisar:",
                    "zeroRecords": "Nenhuma peça encontrada"
                }
            });

            function updateHiddenFields() {
                const selectedFixas = [];
                const selectedSN = [];

                tabelaPecasFixas.$('.peca-fixa-checkbox:checked').each(function () {
                    selectedFixas.push($(this).val());
                });

                tabelaPecasSN.$('.peca-sn-checkbox:checked').each(function () {
                    selectedSN.push($(this).val());
                });

                $('#pecasFixasIds').val(selectedFixas.join(','));
                $('#pecasSNIds').val(selectedSN.join(','));
            }

            $('#tabelaPecasFixas, #tabelaPecasSN').on('change', '.peca-fixa-checkbox, .peca-sn-checkbox', function () {
                updateHiddenFields();
            });

            $('form').on('submit', function () {
                updateHiddenFields();
            });

            updateHiddenFields();
        });
    </script>
}
