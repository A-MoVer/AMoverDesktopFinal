@model A_Mover_Desktop_Final.Models.ModeloMota

@{
    ViewData["Title"] = "Configurar Especificações Padrão";
}

<div class="container-fluid py-4">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header gradient-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Configurar Especificações Padrão - @Model.Nome</h4>
                <a asp-action="Details" asp-route-id="@Model.IDModelo" class="btn btn-outline-secondary">
                    <i class="bx bx-arrow-back me-1"></i> Voltar para Detalhes
                </a>
            </div>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4">
                Configure as especificações padrão que serão pré-preenchidas ao criar novas motas deste modelo.
            </p>
            
            <form asp-action="SalvarEspecificacoesPadrao" method="post">
                <input type="hidden" name="id" value="@Model.IDModelo" />
                
                @if (Model.PecasFixas?.Any() == true)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Componentes Fixos</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Componente</th>
                                            <th>Part Number</th>
                                            <th>Especificação Padrão</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var peca in Model.PecasFixas)
                                        {
                                            <tr>
                                                <td>@peca.Pecas?.Descricao</td>
                                                <td><code>@peca.Pecas?.PartNumber</code></td>
                                                <td>
                                                    <input type="text" class="form-control" 
                                                           name="especificacoes[fixa_@peca.IDPeca]" 
                                                           value="@peca.EspecificacaoPadrao" 
                                                           placeholder="@GetSugestao(peca.Pecas?.Descricao ?? "")" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                
                @if (Model.PecasSN?.Any() == true)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Componentes com Número de Série</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Componente</th>
                                            <th>Part Number</th>
                                            <th>Especificação Padrão</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var peca in Model.PecasSN)
                                        {
                                            <tr>
                                                <td>@peca.Pecas?.Descricao</td>
                                                <td><code>@peca.Pecas?.PartNumber</code></td>
                                                <td>
                                                    <input type="text" class="form-control" 
                                                           name="especificacoes[sn_@peca.IDPeca]" 
                                                           value="@peca.EspecificacaoPadrao" 
                                                           placeholder="@GetSugestao(peca.Pecas?.Descricao ?? "")" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bx bx-save me-1"></i> Salvar Especificações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    public string GetSugestao(string descricao)
    {
        descricao = descricao.ToLower();
        
        if (descricao.Contains("quadro")) return "Cor Cereja";
        if (descricao.Contains("motor")) return "600cc";
        if (descricao.Contains("ecu")) return "Athena";
        if (descricao.Contains("suspensão")) return "Sachs";
        if (descricao.Contains("amortecedor")) return "Sachs";
        if (descricao.Contains("plásticos")) return "Brancos";
        if (descricao.Contains("jante")) return "Cor Cereja";
        if (descricao.Contains("escape")) return "Standard/Doma";
        
        return "";
    }
}