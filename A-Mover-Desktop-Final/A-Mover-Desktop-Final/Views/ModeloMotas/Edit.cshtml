@model A_Mover_Desktop_Final.Models.ModeloMota

@{
    ViewData["Title"] = "Editar Modelo de Mota";
}

<div class="col-xxl">
    <div class="card m-5">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h1 class="mb-0">Editar Modelo de Mota</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IDModelo" />

                <!-- Código do Produto -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="CodigoProduto">
                        Código do Produto <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="CodigoProduto" class="form-control" />
                        <span asp-validation-for="CodigoProduto" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nome -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Nome">
                        Nome <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>

                <!-- Data de Início de Produção -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="DataInicioProducao" readonly>
                        Data de Início de Produção <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="DataInicioProducao" class="form-control" type="date" readonly />
                        <span asp-validation-for="DataInicioProducao" class="text-danger"></span>
                    </div>
                </div>

                <!-- Data de Lançamento -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="DataLancamento">
                        Data de Lançamento
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="DataLancamento" class="form-control" type="date" />
                        <span asp-validation-for="DataLancamento" class="text-danger"></span>
                    </div>
                </div>

                <!-- Data de Descontinuação -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="DataDescontinuacao">
                        Data de Descontinuação
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="DataDescontinuacao" class="form-control" type="date" />
                        <span asp-validation-for="DataDescontinuacao" class="text-danger"></span>
                    </div>
                </div>

                <!-- Estado -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Estado">
                        Estado <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <select asp-for="Estado" class="form-control"
                                asp-items="Html.GetEnumSelectList<A_Mover_Desktop_Final.Models.EstadoModelo>()">
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <p class="text-muted"><span class="text-danger">*</span> - Preenchimento obrigatório</p>

                <div class="row justify-content-start">
                    <div class="col-sm-10 offset-sm-2 d-flex">
                        <input type="submit" value="Salvar" class="btn btn-primary me-2" />
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}