@model IEnumerable<A_Mover_Desktop_Final.Models.Encomenda>

@{
    ViewData["Title"] = "Gestão de Encomendas";
    // Obter todos os possíveis estados de encomenda para o filtro
    var estados = Enum.GetValues(typeof(EstadoEncomenda))
                     .Cast<EstadoEncomenda>()
                     .Select(e => e.ToString());
}

<div class="card m-5 p-1">
    <div class="d-flex justify-content-between align-items-center m-3">
        <h1 class="m-0">Gestão de Encomendas</h1>
        <a type="button" class="btn btn-primary" asp-action="Create">Adicionar Encomenda</a>
    </div>

    <!-- Filtro por Estado -->
    <div class="m-3">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <label class="input-group-text" for="filtroEstado">Estado:</label>
                    <select id="filtroEstado" class="form-select">
                        <option value="">Todos</option>
                        @foreach (var estado in estados)
                        {
                            <option value="@estado">@estado</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table" id="tabela">
            <thead class="table-light">
                <tr>
                    <th>NºEncomenda</th>
                    <th>Data de Criação</th>
                    <th>Cliente</th>
                    <th>Modelo</th>
                    <th>Quantidade</th>
                    <th>Data de Entrega</th>
                    <th>Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var encomenda in Model)
                {
                    var isAtrasada = encomenda.DataEntrega.HasValue && encomenda.DataEntrega.Value.Date < DateTime.Now.Date;
                    var rowClass = isAtrasada ? "table-danger" : "";
                    
                    <tr id="row-@encomenda.IDEncomenda" data-estado="@encomenda.Estado" class="@rowClass">
                        <td>@encomenda.IDEncomenda</td>
                        <td><b>@Html.DisplayFor(modelItem => encomenda.DateCriacao)</b></td>
                        <td>@Html.DisplayFor(modelItem => encomenda.Cliente.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => encomenda.ModeloMota.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => encomenda.Quantidade)</td>
                        <td>
                            @if (encomenda.DataEntrega.HasValue)
                            {
                                <span class="@(isAtrasada ? "text-danger fw-bold" : "")">
                                    @encomenda.DataEntrega.Value.ToString("dd/MM/yyyy")
                                    @if (isAtrasada)
                                    {
                                        <i class="bx bx-error-circle ms-1" title="Prazo vencido!"></i>
                                    }
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Por definir</span>
                            }
                        </td>
                        <td><b>@Html.DisplayFor(modelItem => encomenda.Estado)</b></td>
                        <td>
                            <!-- Ações permanecem iguais -->
                            <a asp-action="Details" asp-route-id="@encomenda.IDEncomenda" class="btn btn-sm btn-info text-white me-2">
                                <i class="fas fa-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@encomenda.IDEncomenda" class="btn btn-sm btn-warning text-white me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@encomenda.IDEncomenda" class="btn btn-sm btn-danger text-white">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                            @if (encomenda.Estado.ToString() == "Pendente")
                            {
                                <a asp-controller="OrdemProducao"
                                   asp-action="CriarPorEncomenda"
                                   asp-route-id="@encomenda.IDEncomenda"
                                   class="btn btn-sm btn-success me-2">
                                    <i class="fas fa-cogs"></i> Criar OPs
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="alert alert-info mb-3">
    <div class="d-flex align-items-center">
        <i class="bx bx-info-circle me-2 fs-5"></i>
        <div>
            <strong>Legenda:</strong>
            <ul class="mb-0 mt-1">
                <li><span class="badge bg-danger">Vermelho</span> - Encomendas com prazo de entrega vencido</li>
                <li><span class="badge bg-light text-dark">Normal</span> - Encomendas dentro do prazo</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar DataTables com configurações
            var table = $('#tabela').DataTable({
                "pageLength": 10,
                "order": [[0, 'desc']], // Ordenar pela primeira coluna (ID) em ordem descendente
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registos por página",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "info": "_START_ a _END_ de _TOTAL_ registos",
                    "infoEmpty": "Nenhum registo disponível",
                    "search": "Pesquisar:",
                    "zeroRecords": "Nenhum registro encontrado"
                }
            });
            
            // Aplicar filtro por estado quando o dropdown mudar - CORRIGIDO
            $('#filtroEstado').on('change', function() {
                var estado = $(this).val();
                
                // Corrigido para o índice 6 (a coluna Estado é a 7ª coluna, índice 6)
                if (estado) {
                    table.column(6).search(estado).draw();
                } else {
                    table.column(6).search('').draw();
                }
            });
            
            // Adicionar cores personalizadas para melhor visualização dos estados - CORRIGIDO
            $('tbody tr').each(function() {
                var estado = $(this).attr('data-estado'); // Usando o atributo data-estado
                
                // Limpar classes existentes
                $(this).removeClass('table-secondary table-warning table-success table-info');
                
                // Aplicar classe conforme o estado
                switch(estado) {
                    case 'Pendente':
                        $(this).addClass('table-secondary');
                        break;
                    case 'EmProducao':
                        $(this).addClass('table-warning');
                        break;
                    case 'Concluida':
                        $(this).addClass('table-success');
                        break;
                    case 'Entregue':
                        $(this).addClass('table-info');
                        break;
                }
            });
        });
    </script>
}
