                <div class="card-body">
                    @if (ViewBag.ProximasIntervencoes != null && ((List<object>)ViewBag.ProximasIntervencoes).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Data</th>
                                        <th>Mota</th>
                                        <th>Tipo</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (dynamic servico in ViewBag.ProximasIntervencoes)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@DateTime.Parse(servico.DataAgendamento.ToString()).ToString("dd/MM")</strong><br>
                                                <small class="text-muted">@DateTime.Parse(servico.DataAgendamento.ToString()).ToString("HH:mm")</small>
