                        </div>
                        <small class="text-muted">@DateTime.Now.Day de @DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month) dias</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- A√ß√µes R√°pidas -->
    <div class="row">
        <div class="col-12">
